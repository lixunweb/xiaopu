/* pages/keshi/keshi.wxss */
.ksname{
  width: 100%;height: 70rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  box-shadow: 0 4px 8px 2px #E4E4E4;
}
.ksname text{margin:0 30rpx;}
.month{
  width: 140rpx;height: 50rpx;
  margin-top: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  background: #FF5252;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.week{
  width: 100%;height: auto;
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.week view{border-left: 1px solid #eee;padding:15rpx 23rpx;}
.week view.hov,.day view.hov{background: #FF5252;color:#fff;}
.week text,.day view text{display: block;text-align: center;}
.week text:last-child{font-size: 20rpx;}
.day{
  width: 100%;
  height: auto;
  overflow: hidden;
  margin: 30rpx 0;
}
.day view{
  width: 50%;height: 90rpx;
  float: left;
  text-align: center;
  font-size: 34rpx;
  padding-top: 10rpx;
}
.day view text:last-child{font-size: 28rpx;}
.yslist{
  width: 100%;height: auto;
  overflow: hidden;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #333;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.lista{float: left;}
.listb{float: right;}
.lista view:first-child{font-size: 34rpx;}
.mid{margin:15rpx 0;}
.btny{
  width: 80rpx;height: 40rpx;
  background: #64c963;
  color: #fff;font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 10rpx;
}