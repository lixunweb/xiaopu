/* pages/guahao/guahao.wxss */
.guahao{
  display: flex;
  width: 100%;height: auto;
  font-size:28rpx;
  color: #333;
}
.left{
  width: 225rpx;height: auto;
}
.left view{
  width: 100%;height: 100rpx;
  background: #f2f2f2;
  border-bottom:1px solid #dbdcdc;
  text-align: center;
  line-height: 100rpx;
  box-sizing: border-box;
 
}
.left view.hov{
  background: #fff;
  border-left: 2px solid #FF1744;
}
.right{
  margin-left: 30rpx;
  width: 480rpx;
}
.right view{
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
}