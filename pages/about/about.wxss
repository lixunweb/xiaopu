/* pages/about/about.wxss */
.tab{
  width: 100%;height: 90rpx;
  position: relative;
  z-index: 2;
  background: #fafafa;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #353535;
}
.tab view{padding: 0 20rpx;height: 90rpx; line-height: 90rpx;}
.tab view.hov{
  border-bottom: 6rpx solid #FF5252;
  color: #FF5252;
}
.newlist{
  width: 100%;display: flex;
  height: 155rpx;
  position: relative;
  z-index: 1;
  margin-bottom: 30rpx;
  padding-top: 30rpx;
  border-top:1px solid #ddd;
  justify-content: space-between;
}
.txt{
  width: 400rpx;font-size: 24rpx;
  color: #888;
}
.txt .h1{font-size: 34rpx;color: #353535;}
.txt text{display: block;}
.date{
  position: absolute;
  bottom:0;
  left: 0;
}
.listimg image{width: 230rpx;height: 155rpx;}