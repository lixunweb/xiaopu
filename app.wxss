/**app.wxss**/
navigator{text-align: center;}
.mt50{margin-top:50rpx;}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding:0 20rpx;
  box-sizing: border-box;
} 
.list{
  width: 750rpx;height: 375rpx;
  position: relative;
  z-index: 1;
}
.tita{
  font-size: 37rpx;
  font-weight: bold;
}
.list image{width: 750rpx;height: 375rpx;}
.tit{
  position: absolute;
  bottom: 50rpx;
  left: 30rpx;
  z-index: 2;
  color: #fff;
}
.h1{
  font-size: 40rpx;
  color: #E64340;
  margin:20rpx 0 30rpx;
}

.footer{
  width: 100%;height: 120rpx;
}
.content{
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 30rpx;
}
.content text{display: block; margin-bottom: 10rpx;}
/* .content view{ margin-bottom: 20rpx;} */
.foot{
  display: flex;
  width: 100%;
  height: 100rpx;
  padding-top: 15rpx;
  background: #F7F7FA;
  border-top:1px solid #ddd;
  position: fixed;
  z-index: 100;
  justify-content: space-around;
  bottom: 0;
}
.foot view{
  font-size: 24rpx;
  color: #7F8389;
}
.foot view.hov{color: #FF2F4A;}
.foot view image{display:block;width: 47rpx;height: 47rpx; margin-bottom: 10rpx;}
.btn{
  width: 100%;height: 90rpx;
}
.btn_red{
  position: fixed;
  bottom: 0;
  z-index: 100;
  width: 100%; height: 90rpx;
  background: #FF5252;
  font-size: 36rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
}
.area textarea{
  width: 100%;height: 350rpx;
  font-size: 34rpx;
  color: #B2B2B2;
}
.choose{
  width: 150rpx;height: 150rpx;
  float: left;
  margin-left: 25rpx;
}
.choose image{width: 150rpx;height: 150rpx;}